<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherInformer.MainPage">

    <StackLayout Padding="20">
        <Label Text="Введите город:" FontSize="24" />
        <Entry x:Name="CityEntry" Placeholder="Введите город" />
        <Button Text="Получить погоду" Clicked="OnGetWeatherClicked" />
        <Label x:Name="TemperatureLabel" FontSize="18" />
        <Label x:Name="HumidityLabel" FontSize="18" />
        <Label x:Name="WindSpeedLabel" FontSize="18" />
        <Label x:Name="WeatherDescriptionLabel" FontSize="18" />
    </StackLayout>
</ContentPage>
